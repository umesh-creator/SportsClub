        <div class="paydetails">
            <h1 style="margin-left: 200px;">Your Payment Details</h1>
            <p >Sport Name : <%= game %></p>
                <% if (data) { %>
                    <% data.forEach(function(user){ %>
                            <p>Amount : <%= user.guestprice %></p>
                            
                    <% }) %>
                    <% } %>
        </div>
        <button>Pay</button>
        <a href="/guest/add">Back</a>

    
        </form>
