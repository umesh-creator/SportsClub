    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/payment.css" type="text/css">
    <title>Payment</title>
</head>
<body>
        <a class="nav-link" href="/logout" style="float: right;padding: 10px 10px;background-color:chartreuse;margin-right: 100px;border-radius: 10px; text-decoration: none;" >Log Out</a>  
        <a class="nav-link"  style="float: right;padding: 10px 10px;background-color:chartreuse;margin-right:10px;border-radius: 10px;" >User</a>
    <form action = "/pay" method="POST">
        <div class="paydetails">
            <h1 style="margin-left: 200px;">Your Payment Details</h1>
            <p >Sport Name : <%= game %></p>
            <% if (data) { %>
                <% data.forEach(function(user){ %>
                        <p>Amount : <%= user.userprice %></p>
                        
                <% }) %>
                <% } %>
        </div>
        <button>Pay</button>
        <a href="/profile">Back</a>

    </form>
</body>
</html>